@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Access Denied";
    var returnUrl = HttpContextAccessor.HttpContext?.Request.Path;
}
<div class="container py-5">
    <div class="alert alert-danger">
        <h4 class="alert-heading">Access denied</h4>
        <p>You do not have permission to view this page. Please sign in with an administrator account.</p>
        <hr />
        <a class="btn btn-primary" href="@Url.Action("Login", "Account", new { returnUrl = returnUrl })">Sign in as admin</a>
        <a class="btn btn-outline-secondary ms-2" href="@Url.Action("Index", "Home")">Back to home</a>
    </div>
</div>