@model Municipal_services_app.Controllers.AccountController.LoginVm
@{
    Layout = null;
    ViewBag.Title = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Municipal Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="login-page-body">
    <section class="login-section d-flex align-items-center justify-content-center">
        <div class="login-card text-center shadow-lg p-4 rounded-4">
            <div class="mb-4">
                <img src="~/svg/city-of-cape-town-seeklogo.svg" alt="Municipality Logo" class="login-logo mb-2" />
                <h3 class="fw-bold text-white">Municipal Admin Portal</h3>
                <p class="text-light mb-0">Secure access to system administration</p>
            </div>

            <form asp-action="Login" method="post" class="text-start mt-4">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Username" class="form-label text-white-50">Username</label>
                    <input asp-for="Username" class="form-control login-input" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-warning small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-white-50">Password</label>
                    <input asp-for="Password" type="password" class="form-control login-input" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-warning small"></span>
                </div>

                <div class="mt-4 d-grid">
                    <button type="submit" class="btn btn-brand-gradient fw-semibold">Sign in</button>
                </div>

                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            </form>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light w-100">
                    <i class="fa-solid fa-house"></i> Back to Home
                </a>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>